{
  "name": "microphi",
  "version": "0.0.0",
  "licence": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "ng": "ng",
    "l": "lerna",
    "start": "ng serve",
    "build": "lerna run build",
    "build:ci": "lerna run build:ci",
    "test": "jest",
    "test:ci": "lerna run test:ci",
    "lint:ci": "lerna run lint --parallel",
    "e2e": "ng e2e",
    "deploy:ci": "lerna publish -y --conventional-commits --create-release github --loglevel verbose --no-private",
    "release": "lerna version --conventional-commits",
    "predeploy:dcsoftware": "ng build dcsoftware --configuration production",
    "deploy:dcsoftware": "cd projects/dcsoftware && npm run sls client deploy --no-confirm",
    "deploy:store": "ng deploy store --configuration=production",
    "predeploy:microphi": "ng build microphi --configuration production",
    "deploy": "lerna run deploy --stream --scope",
    "docs": "lerna run docs --stream",
    "postdocs": "node --experimental-modules scripts/post-doc.mjs"
  },
  "private": true,
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@lerna-lite/changed": "^3.9.1",
    "@lerna-lite/cli": "^3.9.1",
    "@lerna-lite/diff": "^3.9.1",
    "@lerna-lite/exec": "^3.9.1",
    "@lerna-lite/list": "^3.9.1",
    "@lerna-lite/publish": "^3.9.1",
    "@lerna-lite/run": "^3.9.1",
    "@lerna-lite/version": "^3.9.1",
    "@lerna-lite/watch": "^3.9.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-preset-angular": "^14.2.2",
    "ng-packagr": "^17.3.0",
    "protractor": "~7.0.0",
    "serverless": "^3.19.0",
    "serverless-finch": "^4.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.8.1",
    "typescript": "~5.4.2"
  }
}
