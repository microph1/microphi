{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "rootDir": "src",
    "declarationMap": true,
    "noImplicitAny": false,
    "declaration": true,
    "inlineSources": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test-setup.ts",
    // "**/*.spec.ts",
    "node_modules"
  ]
}
